<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aditya.projectapp.sta.InstituteDescriptionActivity"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/descriptionImage"
        android:src="@drawable/noimage"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/instituteDescriptionTitle"
        android:layout_marginTop="20dp"
        android:text="Institute name"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_below="@id/descriptionImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/instituteDescriptionTitle"
        android:layout_marginTop="20dp"
        android:id="@+id/description"
        android:padding="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Description" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_marginTop="20dp"
        android:id="@+id/instituteDescription"
        android:padding="10dp"
        android:textSize="15sp"
        android:text="blank text" />

     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/instituteDescription"
        android:clickable="true"
        android:autoLink="all"
        android:layout_marginTop="100dp"
        android:text="Link"
        android:padding="10dp"
        android:id="@+id/link"
        android:textSize="18sp"
        android:focusable="true" />
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
