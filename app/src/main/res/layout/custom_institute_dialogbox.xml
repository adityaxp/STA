<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_gradient"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:id="@+id/troubleText"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:text="having trouble finding your institute? \n Please reach out to your institute \n to resolve your issue :)"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/troubleText"
        android:layout_centerHorizontal="true"
        android:text="Ok"
        android:id="@+id/okButton"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:background="@drawable/custom_login_button"
        />

</RelativeLayout>